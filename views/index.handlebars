<h1>burgers!</h1>

<h2>burgers that are not sleepy!</h2>

<ul>
  {{#each burgers}}
    {{#unless this.sleepy}}
      <li>
        {{this.name}}

        <form action="/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devour" value="true">
          <button type="submit">SLEEP TIME!</button>
        </form>

        {{> burgers/delete-burger}}
      </li>
    {{/unless}}
  {{/each}}
</ul>

<h2>burgers that are sleepy!</h2>

<ul>
  {{#each burgers}}
    {{#if this.devour}}
      <li>
        {{this.name}}

        <form action="/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devour" value="false">
          <button type="submit">WAKE UP!</button>
        </form>

        {{> burgers/delete-burger}}
      </li>
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Different Burger</h2>
<form class="create-update-form" action="/" method="POST">

  <div class="form-group">
      <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="slee">devour?</label><br>
    <input type="radio" name="devour" value="1" checked> devour!<br>
    <input type="radio" name="devour" value="0"> Awake
  </div>

  <button type="submit">Add Cat</button>
</form>
