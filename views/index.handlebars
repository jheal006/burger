<h1>Throw Down, with The King...</h1>
<div class="king"></div>

<div class="container">

<div class="uneatenBurgers">
  <h2>Yet to be Devoured!</h2>
  <ul>
    {{#each burgers}}
      {{#unless this.devoured}}
        <li>
          {{this.burger_name}}

          <form action="/{{this.id}}?_method=PUT" method="POST">
            <input type="hidden" name="devoured" value="true"><br />
            <button class="devourButton" type="submit">Nom Nom Nom!</button>
          </form>

        </li>
      {{/unless}}
    {{/each}}
  </ul>
</div>



  <div class="eatenBurgers">
    <h2>I'm Stuft!</h2>
      <ul>
        {{#each burgers}}
          {{#if this.devoured}}
            <li>
              {{this.burger_name}}

              <form action="/{{this.id}}?_method=PUT" method="POST">
                <input type="hidden" name="devoured" value="true">
              </form>

            </li>
          {{/if}}
        {{/each}}
      </ul>
  </div>
</div>


<div class="addBurger">

  <h2>Have Another Burger</h2>
  <form class="create-update-form" action="/" method="POST">

    <div class="form-group">
        <input type="text" id="ca" name="burger_name">
    </div>

    <div class="form-group">
      <!-- <label for="slee">devour?</label><br>     -->
    </div>

    <button type="submit">Get to grilling!!!!</button>
  </form>

</div>
